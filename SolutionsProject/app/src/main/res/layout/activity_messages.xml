<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/horizontalScrollView"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/mask_group_6"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/__placeholder_course__color"
		tools:layout_editor_absoluteY="61dp">


		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/tab"
			android:layout_width="371dp"
			android:layout_height="32dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/notifications">


			<RelativeLayout
				android:id="@+id/title_ek2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="75dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent">

				<Button
					android:id="@+id/message"
					android:layout_width="110.6dp"
					android:layout_height="30.6dp"
					android:layout_marginStart="-16dp"
					android:layout_marginTop="0dp"
					android:background="?android:selectableItemBackground"
					android:padding="1dp"
					android:text="@string/message_string"
					android:textAlignment="center"
					android:textAppearance="@style/TextAppearance.AppCompat.Body1"
					android:textColor="@color/message_color"
					android:textSize="16sp" />

				<ImageView
					android:id="@+id/selectied_line"
					android:layout_width="42dp"
					android:layout_height="2dp"
					android:layout_marginStart="17dp"
					android:layout_marginTop="31dp"
					android:contentDescription="selectied_line"
					android:src="@drawable/selectied_line" />

			</RelativeLayout>

			<Button
				android:id="@+id/notification"
				android:layout_width="105.6dp"
				android:layout_height="28.6dp"
				android:layout_marginEnd="75dp"
				android:background="?android:selectableItemBackground"
				android:padding="1dp"
				android:text="@string/notification_string"
				android:textAlignment="center"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:textColor="@color/notification_color"
				android:textSize="16sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent" />


		</androidx.constraintlayout.widget.ConstraintLayout>

		<TextView
			android:id="@+id/no_messages___"
			android:layout_width="96.2dp"
			android:layout_height="21.2dp"
			android:layout_gravity="center_horizontal|center"
			android:layout_marginTop="100dp"
			android:gravity="center"
			android:text="@string/no_messages____string"
			android:textColor="@color/no_messages____color"
			android:textSize="12sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tab" />


		<TextView
			android:id="@+id/notifications"
			android:layout_width="178.4dp"
			android:layout_height="43.4dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="20dp"
			android:text="@string/notifications_string"
			android:textColor="@color/message_color"
			android:textSize="24sp"
			android:textStyle="bold"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />


		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/footer_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent">

			<ImageButton
				android:id="@+id/search"
				android:layout_width="52dp"
				android:layout_height="69.1dp"
				android:layout_marginStart="20dp"
				android:layout_marginTop="6dp"
				android:background="?android:selectableItemBackground"
				android:contentDescription="search"
				android:src="@drawable/search"
				app:layout_constraintStart_toEndOf="@+id/course"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageButton
				android:id="@+id/home"
				android:layout_width="48dp"
				android:layout_height="60.1dp"
				android:layout_marginTop="15dp"
				android:background="?android:selectableItemBackground"
				android:contentDescription="home"
				android:src="@drawable/home"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageButton
				android:id="@+id/course"
				android:layout_width="48dp"
				android:layout_height="60.1dp"
				android:layout_marginStart="20dp"
				android:layout_marginTop="15dp"
				android:background="?android:selectableItemBackground"
				android:contentDescription="course"
				android:src="@drawable/course"
				app:layout_constraintStart_toEndOf="@+id/home"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageButton
				android:id="@+id/message_ek1"
				android:layout_width="48.71dp"
				android:layout_height="62.99dp"
				android:layout_marginStart="20dp"
				android:layout_marginTop="15dp"
				android:background="?android:selectableItemBackground"
				android:contentDescription="message_ek1"
				android:src="@drawable/message_ek1"
				app:layout_constraintStart_toEndOf="@+id/search"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageButton
				android:id="@+id/account"
				android:layout_width="48dp"
				android:layout_height="60.1dp"
				android:layout_marginStart="20dp"
				android:layout_marginTop="15dp"
				android:background="?android:selectableItemBackground"
				android:contentDescription="account"
				android:src="@drawable/account"
				app:layout_constraintStart_toEndOf="@+id/message_ek1"
				app:layout_constraintTop_toTopOf="parent" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>